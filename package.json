{
  "name": "wp-related-posts",
  "version": "0.0.0",
  "private": true,
  "description": "Library for gathering related posts based on various weightings",
  "license": "MIT",
  "author": "Joe Maller <joe@ideasonpurpose.com>",
  "main": "composer.json",
  "scripts": {
    "composer": "npm run composer:install",
    "composer:install": "docker compose run --rm composer",
    "composer:update": "docker compose run --rm composer update",
    "test": "docker compose run --rm test",
    "test:watch": "docker compose run --rm test watch",
    "version": "version-everything && auto-changelog && git add -u"
  },
  "prettier": "@ideasonpurpose/prettier-config",
  "devDependencies": {
    "@ideasonpurpose/prettier-config": "^1.1.0",
    "@prettier/plugin-php": "^0.24.0",
    "auto-changelog": "^2.5.0",
    "prettier": "^3.7.4",
    "version-everything": "^0.11.4"
  },
  "auto-changelog": {
    "package": true,
    "backfillLimit": 7
  },
  "version-everything": {
    "files": [
      "README.md"
    ]
  }
}
